{
  // !Editor settings
  "cSpell.language": "en,de",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  //! Explorer
  "files.exclude": { "**/.venv": true },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "README.md": "LICENSE",
    "Taskfile.yml": ".gitignore,.editorconfig",
    "ansible.cfg": "requirements.yml,requirements.txt",
    "deploy.yml": "inventory.yml,inventory.example.yml"
  },

  //! Ansible
  "ansible.ansible.path": ".venv/bin/ansible",
  "ansible.python.interpreterPath": "/Users/tobias.kaerst/Documents/projects/nas/.venv/bin/python",

  //! Formatters
  "[json][jsonc][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
